{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2020", "dom"],
        "target": "es2020",
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "lib",
        "noImplicitReturns": true,
        "pretty": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "composite": true
    },
    "include": ["src/**/*", "src/typechain-types/**/*", "artifacts/**/*.json"],
    "exclude": ["lib/**/*", "out/**/*", "test/**/*"],
    "references": [
        { "path": "../erc20" },
        { "path": "../utils" },
        { "path": "../../packages/protocol-utils" },
        { "path": "../../packages/utils" }
    ]
}
