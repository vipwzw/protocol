{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2020", "dom"],
        "target": "es2020",
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "lib",
        "noImplicitReturns": true,
        "pretty": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["lib/**/*", "out/**/*", "test/**/*", "**/*.json", "src/migration.ts"]
}
