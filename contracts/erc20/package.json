{
    "name": "@0x/contracts-erc20",
    "version": "4.0.13",
    "engines": {
        "node": ">=6.12"
    },
    "description": "Token contracts used by 0x protocol",
    "main": "lib/src/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "forge build && npx hardhat compile && tsc -b",
        "build:ts": "tsc -b",
        "test": "npx hardhat test",
        "test:foundry": "forge test",
        "test:ci": "npx hardhat test",
        "docs:md": "ts-doc-gen --sourceDir='$PROJECT_FILES' --output=$MD_FILE_DIR --fileExtension=mdx --tsconfig=./typedoc-tsconfig.json",
        "docs:json": "typedoc --excludePrivate --excludeExternals --excludeProtected --ignoreCompilerErrors --target ES5 --tsconfig typedoc-tsconfig.json --json $JSON_FILE_PATH $PROJECT_FILES"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol",
    "devDependencies": {
        "@0x/contracts-utils": "*",
        "@0x/ts-doc-gen": "^0.0.28",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "hardhat": "^2.19.0",
        "ethers": "^6.15.0",
        "chai": "^4.0.1",
        "ts-node": "^10.9.0",
        "typedoc": "~0.16.11"
    },
    "publishConfig": {
        "access": "public"
    },
    "gitHead": "4f91bfd907996b2f4dd383778b50c479c2602b56"
