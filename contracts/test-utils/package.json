{
    "name": "@0x/contracts-test-utils",
    "version": "5.4.59",
    "engines": {
        "node": ">=6.12"
    },
    "description": "Test utils for 0x contracts",
    "main": "lib/src/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "yarn pre_build && tsc -b",
        "build:ci": "yarn build",
        "build:ts": "tsc -b",
        "compile": "npx hardhat compile",
        "typechain": "npx hardhat typechain",
        "generate_contract_wrappers": "npx hardhat typechain",
        "generate_contract_wrappers:force": "rm -rf typechain-types && npx hardhat typechain",
        "clean": "shx rm -rf lib generated_docs coverage .nyc_output *.log artifacts cache out typechain-types generated-* test/generated-*",
        "clean:node-modules": "shx rm -rf node_modules",
        "clean:all": "yarn clean && yarn clean:node-modules",
        "docs:json": "typedoc --excludePrivate --excludeExternals --target ES5 --tsconfig typedoc-tsconfig.json --json $JSON_FILE_PATH $PROJECT_FILES",
        "lint": "tslint --project . --format stylish",
        "pre_build": "copyfiles 'test/fixtures/**/*' lib/",
        "test": "npx hardhat test",
        "test:all": "npx hardhat test",
        "test:legacy": "npx hardhat test test/mocha_blockchain.ts test/order_hash_test.ts test/test_with_reference.ts",
        "test:ci": "yarn test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol/tree/main/contracts/test-utils",
    "devDependencies": {
        "hardhat": "^2.0.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "typechain": "^8.3.2",
        "@types/js-combinatorics": "^0.5.29",
        "npm-run-all": "^4.1.2",
        "shx": "^0.4.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "bn.js": "^4.11.8",
        "chai": "^4.5.0",
        "chai-bignumber": "^3.0.0",
        "decimal.js": "^10.2.0",
        "dirty-chai": "^2.0.1",
        "ethereum-types": "^3.7.1",
        "ethereumjs-util": "^7.0.10",
        "ethers": "^6.15.0",
        "js-combinatorics": "^0.5.3",
        "lodash": "^4.17.11",
        "mocha": "^6.2.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "gitHead": "4f91bfd907996b2f4dd383778b50c479c2602b56"
}
