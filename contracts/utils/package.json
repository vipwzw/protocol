{
    "name": "@0x/contracts-utils",
    "version": "5.8.71",
    "description": "Smart contract utilities of 0x protocol",
    "main": "lib/src/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "yarn pre_build && tsc -b",
        "build:ci": "yarn build",
        "pre_build": "run-s compile contracts:gen generate_contract_wrappers contracts:copy",
        "test": "yarn run_mocha",
        "rebuild_and_test": "run-s build test",
        "test:trace": "SOLIDITY_REVERT_TRACE=true run-s build run_mocha",
        "run_mocha": "mocha --require source-map-support/register --require make-promises-safe 'lib/test/**/*.js' --timeout 100000 --bail --exit",
        "compile": "forge build",
        "watch": "forge build --watch",
        "clean": "shx rm -rf lib out test/generated-wrappers generated-artifacts generated-wrappers",
        "generate_contract_wrappers": "abi-gen --debug --abis './out/*.sol/*.json' --output test/generated-wrappers --backend ethers",
        "lint": "eslint src test",
        "fix": "eslint --fix src test",
        "profiler:report:html": "istanbul report html && open coverage/index.html",
        "test:ci": "yarn test",
        "contracts:gen": "echo \"Skipping contracts-gen (using Foundry)\"",
        "contracts:copy": "echo \"Skipping contracts-copy (using Foundry)\""
    },
    "config": {
        "publicInterfaceContracts": "IOwnable,LibBytes,LibBytesRichErrors,LibOwnableRichErrors,LibReentrancyGuardRichErrors,LibRichErrors,LibSafeMath,LibSafeMathRichErrors,Ownable,ReentrancyGuard",
        "abis": "./out/*.sol/*.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol/tree/main/contracts/utils",
    "devDependencies": {
        "@0x/abi-gen": "^5.8.5",
        "@0x/contracts-test-utils": "^5.4.59",
        "@0x/dev-utils": "^5.0.2",
        "@0x/order-utils": "^10.4.28",
        "@0x/types": "^3.3.7",
        "@0x/typescript-typings": "^5.3.2",
        "@0x/utils": "^7.0.0",
        "@0x/web3-wrapper": "^7.5.3",
        "@types/lodash": "4.14.144",
        "@types/mocha": "^9.1.0",
        "@types/node": "12.12.54",
        "chai": "^4.0.1",
        "chokidar": "^3.5.2",
        "ethers": "4.0.47",
        "lodash": "^4.17.11",
        "make-promises-safe": "^1.1.0",
        "mocha": "^9.2.1",
        "npm-run-all": "^4.1.2",
        "shx": "^0.2.2",
        "source-map-support": "^0.5.6",
        "typescript": "^4.8.4",
        "eslint": "^8.27.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0"
    },
    "dependencies": {
        "@0x/base-contract": "^6.2.7",
        "@0x/contracts-erc20": "3.3.57"
    },
    "publishConfig": {
        "access": "public"
    }
}
