{
    "name": "@0x/contracts-utils",
    "version": "5.8.71",
    "description": "Smart contract utilities of 0x protocol",
    "main": "lib/src/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "yarn pre_build && tsc -b",
        "build:ci": "yarn build",
        "build:ts": "tsc -b",
        "build:forge": "forge build",
        "pre_build": "run-s compile generate_contract_wrappers",
        "gen:wrappers": "yarn generate_contract_wrappers",
        "test": "run-s pre_build test:hardhat test:forge",
        "test:all": "npx hardhat test",
        "test:legacy": "npx hardhat test",
        "test:forge": "forge test",
        "test:hardhat": "yarn pre_build && npx hardhat test",
        "test:coverage": "nyc --reporter=text --reporter=html --reporter=lcov yarn test:hardhat",
        "rebuild_and_test": "run-s build test",
        "test:trace": "SOLIDITY_REVERT_TRACE=true run-s build run_mocha",
        "run_mocha": "npx hardhat test",
        "compile": "forge build && npx hardhat compile",
        "watch": "forge build --watch",
        "clean": "shx rm -rf lib generated_docs test/generated-wrappers test/typechain-types src/typechain-types artifacts cache out",
        "generate_contract_wrappers": "find artifacts/ -name '*.json' -not -path '*/build-info/*' -not -name '*.dbg.json' | xargs npx typechain --target ethers-v6 --out-dir src/typechain-types",
        "generate_contract_wrappers:force": "rm -rf src/typechain-types && find artifacts/ -name '*.json' -not -path '*/build-info/*' -not -name '*.dbg.json' | xargs npx typechain --target ethers-v6 --out-dir src/typechain-types",
        "lint": "eslint src test --ext .ts,.js",
        "fix": "eslint --fix src test",
        "profiler:report:html": "istanbul report html && open coverage/index.html",
        "test:ci": "yarn test",
        "contracts:gen": "echo \"Skipping contracts-gen (using Foundry)\"",
        "contracts:copy": "echo \"Skipping contracts-copy (using Foundry)\""
    },
    "config": {
        "publicInterfaceContracts": "IOwnable,LibBytes,LibBytesRichErrors,LibOwnableRichErrors,LibReentrancyGuardRichErrors,LibRichErrors,LibSafeMath,LibSafeMathRichErrors,Ownable,ReentrancyGuard",
        "abis": "./test/generated-artifacts/IOwnable.json ./test/generated-artifacts/LibBytes.json ./test/generated-artifacts/LibBytesRichErrors.json ./test/generated-artifacts/LibOwnableRichErrors.json ./test/generated-artifacts/LibReentrancyGuardRichErrors.json ./test/generated-artifacts/LibRichErrors.json ./test/generated-artifacts/LibSafeMathRichErrors.json ./test/generated-artifacts/Ownable.json ./test/generated-artifacts/ReentrancyGuard.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol/tree/main/contracts/utils",
    "devDependencies": {
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "typechain": "^8.3.2",
        "@types/lodash": "4.14.144",
        "@types/mocha": "^9.1.0",
        "@types/node": "12.12.54",
        "chai": "^4.5.0",
        "chokidar": "^3.5.2",
        "ethers": "^6.15.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "hardhat": "^2.19.0",
        "lodash": "^4.17.11",
        "make-promises-safe": "^1.1.0",
        "mocha": "^9.2.1",
        "npm-run-all": "^4.1.2",
        "shx": "^0.4.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {},
    "publishConfig": {
        "access": "public"
    }
}
