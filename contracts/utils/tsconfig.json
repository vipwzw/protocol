{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "declarationMap": true,
        "outDir": "lib",
        "noImplicitReturns": true,
        "pretty": true,
        "strict": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*", "test/**/*.ts"],
    "exclude": ["lib/**/*", "**/*.json", "out/**/*", "test/generated-artifacts/**/*"]
}
