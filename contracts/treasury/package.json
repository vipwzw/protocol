{
    "name": "@0x/contracts-treasury",
    "version": "1.4.53",
    "engines": {
        "node": ">=6.12"
    },
    "description": "Smart contracts for governing the 0x ZRX treasury",
    "main": "lib/src/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "yarn pre_build && yarn build:ts",
        "build:ci": "yarn build",
        "build:ts": "tsc -b",
        "pre_build": "run-s compile contracts:gen generate_contract_wrappers contracts:copy",
        "test": "yarn test:hardhat",
        "test:forge": "forge test || echo 'No Foundry tests found, skipping...'",
        "test:ganache": "echo 'Ganache tests need dependency updates, use: yarn ganache:start then yarn test:ganache:manual'",
        "test:ganache:manual": "npx mocha test-ganache/treasury_test.ts --require ts-node/register --timeout 60000",
        "test:hardhat": "npx hardhat compile && npx hardhat test test-hardhat/*.ts",
        "test:all": "run-s test:forge test:hardhat",
        "ganache:start": "npx ganache --port 7545 --chainId 1337 --deterministic --accounts 10 --hardfork london --gasLimit 12000000 --mnemonic 'test test test test test test test test test test test junk' --quiet &",
        "ganache:stop": "pkill -f ganache || true",
        "ganache:restart": "yarn ganache:stop && sleep 2 && yarn ganache:start",
        "rebuild_and_test": "run-s build test",
        "run_mocha": "npx hardhat test",
        "compile": "forge build && npx hardhat compile",
        "watch": "forge build --watch",
        "clean": "shx rm -rf lib out test/generated-wrappers generated-artifacts generated-wrappers",
        "generate_contract_wrappers": "mkdir -p temp-abis && cp ./artifacts/contracts/src/ZrxTreasury.sol/ZrxTreasury.json ./artifacts/contracts/src/DefaultPoolOperator.sol/DefaultPoolOperator.json ./artifacts/contracts/external/ISablier.sol/ISablier.json ./artifacts/contracts/src/IStaking.sol/IStaking.json ./artifacts/contracts/src/IZrxTreasury.sol/IZrxTreasury.json temp-abis/ && abi-gen --debug --abis ./temp-abis/*.json --output test/generated-wrappers --backend ethers && rm -rf temp-abis",
        "lint": "eslint src test",
        "fix": "eslint --fix src test",
        "test:ci": "yarn test",
        "contracts:gen": "echo \"Skipping contracts-gen (using Foundry)\"",
        "contracts:copy": "echo \"Skipping contracts-copy (using Foundry)\"",
        "docs:md": "ts-doc-gen --sourceDir='$PROJECT_FILES' --output=$MD_FILE_DIR --fileExtension=mdx --tsconfig=./typedoc-tsconfig.json",
        "docs:json": "typedoc --excludePrivate --excludeExternals --excludeProtected --ignoreCompilerErrors --target ES5 --tsconfig typedoc-tsconfig.json --json $JSON_FILE_PATH $PROJECT_FILES",
        "publish:private": "yarn build && echo 'gitpkg publish disabled'"
    },
    "config": {
        "publicInterfaceContracts": "ZrxTreasury,DefaultPoolOperator,ISablier,IStaking,IZrxTreasury,DummyERC20Token",
        "abis:comment": "This list is auto-generated by contracts-gen. Don't edit manually.",
        "abis": "./artifacts/contracts/src/ZrxTreasury.sol/ZrxTreasury.json ./artifacts/contracts/src/DefaultPoolOperator.sol/DefaultPoolOperator.json ./artifacts/contracts/external/ISablier.sol/ISablier.json ./artifacts/contracts/src/IStaking.sol/IStaking.json ./artifacts/contracts/src/IZrxTreasury.sol/IZrxTreasury.json"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol/tree/main/contracts/treasury",
    "devDependencies": {
        "@0x/abi-gen": "^5.8.5",
        "@0x/contract-addresses": "^8.12.0",
        "@0x/contracts-asset-proxy": "^3.7.19",
        "@0x/contracts-staking": "^2.0.45",
        "@0x/contracts-test-utils": "*",
        "@0x/ts-doc-gen": "^0.0.28",
        "@types/isomorphic-fetch": "^0.0.35",
        "@types/lodash": "4.14.104",
        "@types/mocha": "^5.2.7",
        "@types/prompts": "^2.0.9",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "ganache": "^7.9.0",
        "@ganache/core": "^0.10.0",
        "@types/node": "^20.0.0",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "isomorphic-fetch": "^3.0.0",
        "lodash": "^4.17.11",
        "mocha": "^10.2.0",
        "npm-run-all": "^4.1.2",
        "prompts": "^2.4.0",
        "shx": "^0.2.2",
        "ts-node": "^10.9.0",
        "typedoc": "~0.16.11",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@0x/base-contract": "^7.0.0",
        "@0x/protocol-utils": "^11.24.1",
        "@0x/subproviders": "^8.0.1",
        "@0x/types": "^3.3.7",
        "@0x/typescript-typings": "^5.3.1",
        "@0x/utils": "^7.0.0",
        "@0x/web3-wrapper": "^8.0.1",
        "ethereum-types": "^3.7.1",
        "ethereumjs-util": "^7.0.10"
    },
    "publishConfig": {
        "access": "public"
    }
}
