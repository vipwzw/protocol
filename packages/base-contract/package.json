{
    "name": "@0x/base-contract",
    "version": "7.0.1",
    "engines": {
        "node": ">=6.12"
    },
    "description": "Base contract wrapper for Ethers v6 compatibility",
    "main": "lib/src/index.js",
    "types": "lib/src/index.d.ts",
    "scripts": {
        "build": "tsc -b",
        "build:ts": "tsc -b",
        "build:ci": "yarn build",
        "clean": "shx rm -rf lib generated_docs coverage .nyc_output *.log",
        "clean:node-modules": "shx rm -rf node_modules",
        "clean:all": "yarn clean && yarn clean:node-modules",
        "watch": "tsc -b -w",
        "test": "yarn test:hardhat",
        "test:hardhat": "npx hardhat test",
        "test:ci": "yarn test",
        "rebuild_and_test": "run-s clean build test",
        "test:circleci": "yarn test:coverage",
        "run_mocha": "mocha --require source-map-support/register --require make-promises-safe lib/test/**/*_test.js --bail --exit",
        "test:coverage": "nyc npm run test --all && yarn coverage:report:lcov",
        "coverage:report:lcov": "nyc report --reporter=text-lcov > coverage/lcov.info",
        "lint": "eslint src --ext .ts",
        "fix": "tslint --format stylish --fix --project ."
    },
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/tools.git"
    },
    "bugs": {
        "url": "https://github.com/0xProject/tools/issues"
    },
    "homepage": "https://github.com/0xProject/tools/tree/main/base-contract",
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "@nomicfoundation/hardhat-ethers": "^3.0.0",
        "@types/lodash": "^4.14.200",
        "@types/mocha": "^10.0.0",
        "@types/uuid": "^9.0.0",
        "chai": "^4.5.0",
        "ethereum-types": "^3.7.1",
        "hardhat": "^2.26.0",
        "make-promises-safe": "^1.1.0",
        "mocha": "^10.2.0",
        "npm-run-all": "^4.1.2",
        "shx": "^0.3.4",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "ethers": "^6.15.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "gitHead": "4f91bfd907996b2f4dd383778b50c479c2602b56"
}
