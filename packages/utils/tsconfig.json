{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "declaration": true,
        "outDir": "./lib",
        "rootDir": ".",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "types": [],
        "resolveJsonModule": true
    },
    "include": ["./*.ts"],
    "exclude": ["./lib/**/*", "./**/*_test.ts", "./node_modules/**/*"]
} 