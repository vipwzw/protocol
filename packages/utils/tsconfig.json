{
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "target": "es2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "src/types.d.ts"],
    "exclude": ["node_modules", "lib", "test"]
}
