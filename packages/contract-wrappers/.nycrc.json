{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.d.ts",
    "src/typechain-types/**/*",
    "test/**/*",
    "coverage/**/*",
    "lib/**/*"
  ],
  "report-dir": "coverage",
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 70
} 