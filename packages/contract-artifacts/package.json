{
    "name": "@0x/contract-artifacts",
    "version": "3.19.0",
    "engines": {
        "node": ">=6.12"
    },
    "description": "0x smart contract compilation artifacts in native Hardhat format for TypeChain",
    "main": "lib/src/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "artifacts_copy": "node scripts/copy-artifacts.js",
        "artifacts_update": "yarn artifacts_copy && yarn build",
        "pre_build": "node scripts/copy-artifacts.js",
        "build": "yarn pre_build && yarn tsc -b",
        "build:ci": "yarn build",
        "test": "npx mocha test/*.ts --require ts-node/register",
        "test:ci": "yarn test",
        "run_mocha": "npx mocha test/*.ts --require ts-node/register",
        "clean": "shx rm -rf lib artifacts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol/tree/main/packages/contract-artifacts",
    "devDependencies": {
        "@0x/utils": "^7.0.0",
        "@types/minimatch": "^3.0.5",
        "@types/mocha": "^5.2.7",
        "chai": "^4.0.1",
        "lodash": "^4.17.11",
        "mocha": "^6.2.0",
        "shx": "^0.4.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "gitHead": "4f91bfd907996b2f4dd383778b50c479c2602b56"
}
