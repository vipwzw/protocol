{
    "name": "@0x/test-utils",
    "version": "5.4.59",
    "engines": {
        "node": ">=6.12"
    },
    "description": "Modern Hardhat-based test utilities with backward compatibility",
    "main": "lib/index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "build": "yarn build:contracts && yarn build:ts",
        "build:ci": "yarn build",
        "build:ts": "yarn pre_build && tsc -b",
        "build:contracts": "npx hardhat compile",
        "build:full": "yarn clean && yarn build",
        "clean": "shx rm -rf lib generated_docs coverage .nyc_output *.log artifacts cache out typechain-types generated-* test/generated-*",
        "clean:node-modules": "shx rm -rf node_modules",
        "clean:all": "yarn clean && yarn clean:node-modules",
        "compile": "yarn build",
        "docs:json": "typedoc --excludePrivate --excludeExternals --target ES5 --tsconfig typedoc-tsconfig.json --json $JSON_FILE_PATH $PROJECT_FILES",
        "lint": "tslint --project . --format stylish",
        "prepare": "yarn build",
        "pre_build": "copyfiles 'test/fixtures/**/*' lib/",
        "test": "yarn compile && yarn test:run",
        "test:run": "npx hardhat test",
        "test:hardhat": "yarn test",
        "test:watch": "npx hardhat test --watch",
        "test:coverage": "npx hardhat coverage",
        "test:gas": "REPORT_GAS=true npx hardhat test",
        "test:all": "yarn test",
        "test:ci": "yarn test",
        "test:quick": "npx hardhat test",
        "ci": "yarn build:ci && yarn lint && yarn test:ci",
        "verify": "yarn lint && yarn test:ci"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0xProject/protocol.git"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/0xProject/protocol/issues"
    },
    "homepage": "https://github.com/0xProject/protocol/tree/main/packages/test-utils",
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "^20.0.0",
        "@types/js-combinatorics": "^0.5.29",
        "copyfiles": "^2.4.1",
        "npm-run-all": "^4.1.2",
        "shx": "^0.4.0",
        "ts-node": "^10.9.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.25.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "bn.js": "^4.11.8",
        "chai": "^4.5.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",

        "decimal.js": "^10.2.0",
        "dirty-chai": "^2.0.1",
        "ethereum-types": "^3.7.1",
        "ethereumjs-util": "^7.0.10",
        "ethers": "^6.15.0",
        "hardhat": "^2.22.0",
        "js-combinatorics": "^0.5.3",
        "lodash": "^4.17.11",
        "mocha": "^6.2.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "gitHead": "4f91bfd907996b2f4dd383778b50c479c2602b56"
}